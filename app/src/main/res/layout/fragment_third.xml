<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_intro"
    tools:context=".introduce.FirstFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical">

        <com.hidephoto.hidevideo.lockphoto.secretphoto.safe.free.textViewFont.SvnBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tittle3"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:src="@drawable/locksmith" />

        <com.hidephoto.hidevideo.lockphoto.secretphoto.safe.free.textViewFont.SvnBookTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:text="@string/descriptionIntro3"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <com.hidephoto.hidevideo.lockphoto.secretphoto.safe.free.textViewFont.SvnBookTextView
            android:id="@+id/grantPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/border_textview"
            android:onClick="clickGrantPermission"
            android:padding="@dimen/_10sdp"
            android:text="@string/grantPermission"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            tools:ignore="OnClick" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnDone"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:background="@drawable/custom_buttom_intro"
        android:onClick="clickDone"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_tick"
        android:text="@string/next"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/btnBack2"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:background="@drawable/custom_buttom_intro"
        android:onClick="clickDone"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/ic_skip"
        android:text="@string/next"
        tools:ignore="OnClick" />

</RelativeLayout>