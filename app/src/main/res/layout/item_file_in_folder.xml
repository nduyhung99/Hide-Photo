<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutImageFile"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_margin="@dimen/_1sdp">

    <ImageView
        android:id="@+id/imageFile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/no_file_found" />

    <RelativeLayout
        android:id="@+id/layoutSelection"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ic_select"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:background="@drawable/custom_buttom_select"
            android:src="@drawable/ic_select"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ic_unselect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_unselect"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>